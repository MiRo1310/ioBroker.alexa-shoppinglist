{
    "i18n": true,
    "type": "tabs",
    "items": {
        "_options": {
            "type": "panel",
            "label": "Shopping List",
            "items": {
                "status": {
                    "type":"alive", 
                    "instance": "`alexa.shoppinglist.${data.number}`",                   
                    "newLine": true,
                    "sm": 12,
                    "md": 6,
                    "lg": 6,                    
                    "textNotAlive": "You habe to start the Adapter befor you can configure!",
                    "textAlive":""                                     
                                                    
                },
                "alexa": {
                    "newLine": true,
                    "type": "instance",
                    "alive": "instance", 
                    "adapter": "alexa2",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "hidden":"data.status",
                    "label": "alexa2 instance",
                    "help": "device for output",
                    "disabled": "!data.status"
                },
                "device": {
                    "newLine": true,
                    "type": "selectSendTo",
                    "label": "Device",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "command": "getDevices",
                    "noTranslation": true,
                    "alsoDependsOn": ["alexa"],                    
                    "hidden": "!data.alexa",
                    "jsonData": "{\"alexa\":  \"${data.alexa}\"}",
                    "disabled": "!data.alexa"
                },
                "shoppinglist": {
                    "type": "selectSendTo",
                    "label": "shopping list",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "command": "getShoppinglist",
                    "noTranslation": true,
                    "alsoDependsOn": ["alexa"],
                    "hidden": "!data.alexa",
                    "jsonData": "{\"alexa\":  \"${data.alexa}\"}",
                    "disabled": "!data.alexa"
                }
            }
        }
    }
}